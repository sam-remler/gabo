# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gabo
DB_USER=gabo_user
DB_PASSWORD=gabo_password
DB_VECTOR_TABLE=embeddings
DB_METADATA_TABLE=metadata

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_API_KEY=your_openai_api_key_here
EMBEDDING_BATCH_SIZE=100
EMBEDDING_MAX_RETRIES=3

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_API_KEY=your_openai_api_key_here
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Storage Configuration
STORAGE_DATA_DIR=./data
STORAGE_TEMP_DIR=./temp
STORAGE_MAX_FILE_SIZE=104857600

# Task Queue Configuration
TASK_BROKER_URL=redis://localhost:6379/0
TASK_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Alternative Embedding Providers
# For Cohere:
# EMBEDDING_PROVIDER=cohere
# EMBEDDING_MODEL=embed-english-v4.0
# EMBEDDING_API_KEY=your_cohere_api_key_here

